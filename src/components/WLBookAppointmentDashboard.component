 <body id="bdy">
            <apex:form id="frm">
                <div class="clearfix"></div>
                  <section class="col-md-12 col-md-offset-0 col-xs-10 col-xs-offset-1" id="bkNAPt">
                    <div class="row" style="display:block;" >
                        <apex:commandLink value="Book an Appointment" onclick="HideBtn();" styleclass=" col-md-12 col-xs-12 btn btn-default btn_dash_book btn_dash_orange" id="BtnApp" rerender="bdy" />
