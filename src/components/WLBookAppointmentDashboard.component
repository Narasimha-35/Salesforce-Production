        function HideBtn()
        {  
           $("#opt").toggle(50);  
           $('.clReqp').html('')          
            $('#inlineDatepicker').datepicker();
                            $("#inlineDatepicker").on("changeDate", function(event) {
                                              
                                                $('[id$=schdateId]').val(
                                                    $("#inlineDatepicker").datepicker('getFormattedDate')
                                                 )
                           });
        }
        
        function ShowBtn()
        {
                    
           $('#inlineDatepicker').datepicker();
